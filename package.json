{
  "name": "kis2026_base",
  "version": "1.0.0",
  "description": "Block theme base for KIS.",
  "type": "commonjs",
  "author": "Koutarou ISHIKAWA",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stein2nd/kis2026_base.git"
  },
  "homepage": "https://github.com/stein2nd/kis2026_base#readme",
  "bugs": {
    "url": "https://github.com/stein2nd/kis2026_base/issues"
  },
  "keywords": [
    "wordpress",
    "blocktheme"
  ],
  "directories": {
    "doc": "docs"
  },
  "main": "build/index.js",
  "scripts": {
    "build": "FLUSH_DIST=true vite build --mode production",
    "build:dev": "FLUSH_DIST=true vite build --mode development",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint src/scripts/**/*.ts",
    "lint:css": "stylelint src/styles/**/*.scss",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
    "lint:js:fix": "eslint src/scripts/**/*.ts --fix",
    "lint:css:fix": "stylelint src/styles/**/*.scss --fix",
    "format": "prettier --write \"src/**/*.{ts,scss}\"",
    "format:check": "prettier --check \"src/**/*.{ts,scss}\""
  },
  "overrides": {
    "rollup": "^4.55.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jquery": "^3.5.33",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "jiti": "^2.6.1",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "rollup": "^4.55.1",
    "sass": "^1.97.2",
    "stylelint": "^16.26.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-static-copy": "^3.1.4"
  }
}
