{
  "compilerOptions": {
    /* ===== 基本 ===== */
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,

    /* ===== Vite / TypeScript ===== */
    "isolatedModules": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,

    /* ===== 厳格性 ===== */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* ===== 相互運用 ===== */
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* ===== パスエイリアス ===== */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@scripts/*": ["src/scripts/*"],
      "@styles/*": ["src/styles/*"],
      "@types/*": ["src/types/*"]
    },

    /* ===== 型定義 ===== */
    "types": [
      "node",
      "jquery"
    ]
  },

  "include": [
    "src/scripts/**/*",
    "src/types/**/*.d.ts",
    "vite.config.ts",
    "eslint.config.ts"
  ],

  "exclude": [
    "node_modules",
    "dist"
  ]
}
